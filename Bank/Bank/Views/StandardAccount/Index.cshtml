@model IEnumerable<Bank.Models.StandardAccountIndexViewModel>

@{
    ViewData["Title"] = "Standard accounts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create standard account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(i => i.Id)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Passport)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("All", "Index", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
