@model Bank.Models.SelectDepositViewModel

@{
    ViewData["Title"] = "Deposit - currency";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get">

            <div class="form-group">
                <label asp-for="CurrencyList" class="control-label"></label>
                <select asp-for="CurrencyId" asp-items="@(new SelectList(Model.CurrencyList, "Id", "Name"))"
                        class="form-control" onchange="dataChanged()">
                </select>
                <span asp-validation-for="CurrencyId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="CurrencyName" class="form-control" disabled="disabled">              
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create">Back to List</a>
</div>
@section Scripts {

    <script type="text/javascript">
    function dataChanged()
    {
        var url = '@Url.Action("GetCurrencyNameByModel", "Deposit")';
        $.post(url, $('form').serialize(), function (view)
        {

            console.log(view);
            $("#CurrencyName").val(view);
        });
    }
    </script>

}


